    }

    @media (width <= 640px) {
      margin-block: clamp(-12rem, -24vw, -8rem) clamp(-10rem, -18vw, -4rem);
      padding-inline: 1.5rem;
    }
  }

  .waffle-card {
    position: relative;
    inline-size: min(1200px, 92vw);
    overflow: hidden;
    border-radius: clamp(var(--radius-card), 3vw, 40px);
    aspect-ratio: 16 / 11;

    @media (width <= 640px) {
      inline-size: min(1200px, 95vw);
      aspect-ratio: 16 / 12;
    }

    & .us-scene {

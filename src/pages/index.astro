  .hero-inner {
    max-inline-size: var(--container-max-width);
    margin-inline: auto;
    padding-block: clamp(4rem, 10vh, 8rem) clamp(8rem, 15vh, 12rem);
    padding-inline: 2rem;

    @media (width <= 640px) {

---
/**
 * Contest Card Component
 * Individual card for contest steps
 */
interface Props {
  number: string;
  title: string;
}

const { number, title } = Astro.props;
---

<article class="contest-card">
  <div class="card-header">
    <div class="card-number">{number}</div>
    <h3>{title}</h3>
  </div>
  <div class="card-content">
    <slot />
  </div>
</article>

<style>
  .contest-card {
    display: grid;
    gap: 1.5rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-card);
    padding: 2rem;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-card);
    container-type: inline-size;
  }

  .contest-card:hover {
    border-color: var(--border-bright);
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .card-header h3 {
    font-size: clamp(1.375rem, 4cqi, 1.75rem);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    letter-spacing: var(--tracking-tight);
  }

  .card-number {
    flex-shrink: 0;
    inline-size: clamp(2.5rem, 8cqi, 3rem);
    block-size: clamp(2.5rem, 8cqi, 3rem);
    display: grid;
    place-items: center;
    font-size: clamp(0.95rem, 3cqi, 1.1rem);
    font-weight: 800;
    border-radius: 50%;
    background: var(--gradient-vibrant-subtle);
    color: var(--text-primary);
    border: 1px solid color-mix(in oklch, var(--color-orange-600) 30%, transparent);
    box-shadow: var(--shadow-glow-purple);
  }

  .card-content {
    inline-size: 100%;
  }

  /* Container query: Adjust spacing for narrow cards */
  @container (max-width: 500px) {
    .contest-card {
      padding: 1.5rem;
      gap: 1.25rem;
    }
  }

  /* Viewport query: Mobile devices */
  @media (max-width: 640px) {
    .contest-card {
      padding: 1.5rem;
      gap: 1.125rem;
    }
  }
</style>

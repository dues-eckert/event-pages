---
/**
 * Badge Component
 * Reusable badge/pill component with variant support
 */
interface Props {
  variant?: 'gray' | 'gradient';
}

const { variant = 'gray' } = Astro.props;
---

<span class:list={['badge', `badge-${variant}`]}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    inline-size: fit-content;
    padding: 0.625rem 1.25rem;
    font-size: clamp(0.875rem, 2cqi, 0.95rem);
    font-weight: 600;
    line-height: 1;
    vertical-align: middle;
    border: 1px solid var(--border-bright);
    border-radius: var(--radius-pill);
    backdrop-filter: blur(12px);
    transition: all var(--transition-fast);
  }

  .badge:hover {
    border-color: color-mix(in oklch, var(--color-white) 30%, transparent);
    transform: translateY(-2px);
  }

  .badge-gray {
    color: var(--text-primary);
    background: linear-gradient(
      135deg,
      color-mix(in oklch, var(--color-white) 8%, transparent),
      color-mix(in oklch, var(--color-white) 4%, transparent)
    );
  }

  .badge-gradient {
    color: var(--text-primary);
    background: var(--gradient-vibrant-subtle);
    box-shadow: var(--shadow-glow-purple);
  }
</style>
